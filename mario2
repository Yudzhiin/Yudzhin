#include <cs50.h>
#include <stdio.h>

int main(void)
{

int a;
int b;
int c;
int d;

do
    {
        a = get_int("Height: ");
    }
    
    while (a < 1 || a > 8);

 for(int i = 1; i <= a; i++)
    {
        for(b = a - i; b > 0; b--)
{
printf(" ");
}
for (c = 1; c <=i; c++)
{
printf("#");
}
printf("  ");
for (d = 1; d <=i; d++)
{
printf("#");
}
        printf("\n");
}
return 0;
}
